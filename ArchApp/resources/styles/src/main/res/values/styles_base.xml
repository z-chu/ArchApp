<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Saltoken.DividerVertical" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:dividerHeight</item>
        <item name="android:background">?dividerVertical</item>
    </style>

    <style name="Widget.Saltoken.DividerHorizontal" parent="">
        <item name="android:layout_width">?android:dividerHeight</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?dividerHorizontal</item>
    </style>

    <style name="Widget.Saltoken.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:theme">@style/ThemeOverlay.Saltoken.Toolbar.Primary</item>
        <item name="theme">@style/ThemeOverlay.Saltoken.Toolbar.Primary</item>
        <item name="titleTextColor">@color/textColorPrimaryInverse</item>
        <item name="subtitleTextColor">@color/textColorSecondaryInverse</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>
        <item name="actionMenuTextColor">@color/colorOnPrimary</item>
    </style>


    <style name="Widget.Saltoken.Toolbar.Dark.Surface" parent="Widget.MaterialComponents.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Saltoken.Toolbar.Surface</item>
        <item name="theme">@style/ThemeOverlay.Saltoken.Toolbar.Surface</item>
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="subtitleTextColor">@color/textColorSecondary</item>
        <item name="colorControlNormal">@color/colorOnSurface</item>
        <item name="actionMenuTextColor">@color/colorOnSurface</item>
    </style>

    <style name="Widget.Saltoken.Toolbar.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Saltoken.Toolbar.Surface</item>
        <item name="theme">@style/ThemeOverlay.Saltoken.Toolbar.Surface</item>
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="subtitleTextColor">@color/textColorSecondary</item>
        <item name="colorControlNormal">@color/colorOnSurface</item>
        <item name="actionMenuTextColor">@color/colorOnSurface</item>

    </style>

    <style name="ThemeOverlay.Saltoken.Toolbar.Surface" parent="">
        <item name="colorControlNormal">@color/colorOnSurface</item>
        <item name="actionMenuTextColor">@color/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.Saltoken.Toolbar.Primary" parent="">
        <item name="colorControlNormal">@color/colorOnPrimary</item>
        <item name="android:colorControlNormal">@color/colorOnPrimary</item>
        <item name="actionMenuTextColor">@color/colorOnPrimary</item>
    </style>


    <style name="Widget.Saltoken.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Saltoken.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">?android:textColorTertiary</item>
        <item name="helperTextTextColor">?android:textColorTertiary</item>
        <item name="shapeAppearance">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>

    </style>

    <style name="Widget.Saltoken.TextInputEditText" parent="Widget.Design.TextInputEditText">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Widget.Saltoken.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/abc_tab_layout_indicator</item>
        <item name="tabTextAppearance">?textAppearanceSubtitle1</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="tabMode">scrollable</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.Saltoken.TabLayout.Dense" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/abc_tab_layout_indicator_large</item>
        <item name="tabTextAppearance">?textAppearanceSubtitle2</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="tabMode">scrollable</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:clipToPadding">false</item>
    </style>



    <style name="Widget.Saltoken.TextInputLayout.OutlinedBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.Saltoken.TextInputEditText.OutlinedBox.Dense
        </item>
    </style>

    <style name="ThemeOverlay.Saltoken.TextInputEditText.OutlinedBox.Dense" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="editTextStyle">
            @style/Widget.Saltoken.TextInputEditText.OutlinedBox.Dense
        </item>
    </style>

    <style name="Widget.Saltoken.TextInputEditText.OutlinedBox.Dense" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>