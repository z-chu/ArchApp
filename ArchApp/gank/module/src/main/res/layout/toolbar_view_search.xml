<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_search"
    android:layout_width="match_parent"
    android:layout_height="40.0dp"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="8.0dp"
    android:layout_marginRight="8.0dp"
    android:background="@drawable/bg_toolbar_search"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_search_flag"
        android:layout_width="24.0dp"
        android:layout_height="24.0dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.0dp"
        android:layout_marginRight="12.0dp"
        app:srcCompat="@drawable/ic_vector_search" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_search_flag"
        android:text="搜索干货..."
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_body_2" />

</RelativeLayout>